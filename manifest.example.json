{
  "display_information": {
    "name": "<your-app-name>"
  },
  "features": {
    "bot_user": {
      "display_name": "<your-app-name>",
      "always_online": false
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": ["channels:history", "chat:write"]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": ["message.channels"],
      "request_url": "https://<your-vercel-app-url>/api/events"
    },
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
}
